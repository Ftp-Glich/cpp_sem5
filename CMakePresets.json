{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (Auto-detect)",
      "binaryDir": "${sourceDir}/build/",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": "default",
    "binaryDir": "${sourceDir}/build/",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-gcc",
      "inherits": "default",
      "displayName": "Linux GCC",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      }
    },
    {
      "name": "linux-clang",
      "inherits": "default",
      "displayName": "Linux Clang",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      }
    },
    {
      "name": "windows-msvc",
      "inherits": "default",
      "displayName": "Windows MSVC",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Ninja",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "v143",
        "strategy": "external"
      },
      "environment": {
        "CC": "cl",
        "CXX": "cl"
      }
    },
    {
      "name": "windows-clang",
      "inherits": "windows-msvc",
      "displayName": "Windows LLVM Clang",
      "description": "Clang with MSVC ABI",
      "environment": {
        "CC": "clang-cl",
        "CXX": "clang-cl"
      }
    },
    {
      "name": "windows-mingw",
      "inherits": "default",
      "displayName": "Windows MinGW",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Ninja",
      "environment": {
        "CC": "clang",
        "CXX": "clang++",
        "AR": "llvm-ar"
      }
    },
    {
      "name": "macos-clang",
      "inherits": "default",
      "displayName": "macOS Apple Clang",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-build",
      "configurePreset": "default",
      "jobs": 4
    },
    {
      "name": "release-build",
      "configurePreset": "release",
      "jobs": 4
    }
  ]
}